<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.dbms_project.telephone_bill.UpdateDetailsController">
    
   <GridPane hgap="10" prefHeight="754.0" prefWidth="1025.0" style="-fx-background-color: linear-gradient(to bottom right, #E6E6FA, #ADD8E6); -fx-padding: 20px; -fx-border-radius: 15px; -fx-alignment: center;" vgap="20">

    <Label style="-fx-font-size: 28px; -fx-font-weight: bold;" text="Update Billing Constants" GridPane.columnIndex="1" GridPane.columnSpan="2" />

    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Rate per MB:" textAlignment="RIGHT" GridPane.rowIndex="1" />
    <TextField fx:id="txtRatePerMB" promptText="Rate per MB" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-background-radius: 10px; -fx-pref-width: 200px;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: red;" text="*" GridPane.columnIndex="2" GridPane.rowIndex="1" />

    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Call Rate per Second (Local):" textAlignment="RIGHT" GridPane.rowIndex="2" />
    <TextField fx:id="txtRatePerSecLocal" promptText="Rate per Second (Local)" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-background-radius: 10px; -fx-pref-width: 200px;" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: red;" text="*" GridPane.columnIndex="2" GridPane.rowIndex="2" />

    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Call Rate per Second (International):" textAlignment="RIGHT" GridPane.rowIndex="3" />
    <TextField fx:id="txtRatePerSecInternational" promptText="Rate per Second (International)" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-background-radius: 10px; -fx-pref-width: 200px;" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: red;" text="*" GridPane.columnIndex="2" GridPane.rowIndex="3" />

    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Fixed Charge:" textAlignment="RIGHT" GridPane.rowIndex="4" />
    <TextField fx:id="txtFixedCharge" promptText="Fixed Charge" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-background-radius: 10px; -fx-pref-width: 200px;" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: red;" text="*" GridPane.columnIndex="2" GridPane.rowIndex="4" />

    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Free Data Usage (mb):" textAlignment="RIGHT" GridPane.rowIndex="5" />
    <TextField fx:id="txtFreeDataUsage" promptText="Free Data Usage" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-background-radius: 10px; -fx-pref-width: 200px;" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: red;" text="*" GridPane.columnIndex="2" GridPane.rowIndex="5" />

    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Free Call Usage(min):" textAlignment="RIGHT" GridPane.rowIndex="6" />
    <TextField fx:id="txtFreeCallUsage" promptText="Free Call Usage" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-background-radius: 10px; -fx-pref-width: 200px;" GridPane.columnIndex="1" GridPane.rowIndex="6" />
    <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: red;" text="*" GridPane.columnIndex="2" GridPane.rowIndex="6" />

    <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: red;" text="* Required " GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="7" />

    <JFXButton onAction="#updateBillingConstants" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-background-color: #007bff; -fx-text-fill: white; -fx-background-radius: 10px;" text="Update" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="8" />
    <JFXButton onAction="#cancelUpdate" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-background-color: #007bff; -fx-text-fill: white; -fx-background-radius: 10px;" text="Cancel" GridPane.columnIndex="2" GridPane.rowIndex="8" />

</GridPane>

    
</AnchorPane>
